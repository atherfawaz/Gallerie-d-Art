@using Art_Gallery.Models;

<!doctype html>
<html class="no-js" lang="en">
<head>
    <!-- title -->
    <title>Galerie d'Art</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1" />
    <meta name="author" content="Ather, Hamza, Mujtaba, Osama">
    <!-- description -->
    <meta name="description" content="A gallery for buying/selling or simply enjoying artwork ">
    <!-- keywords -->
    <meta name="keywords" content="art, design, crafts, paintings, paint, digital art, digital">
    <!-- favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.png">
    <link rel="apple-touch-icon" href="~/Content/images/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/images/apple-touch-icon-114x114.png">
    <!-- animation -->
    <link rel="stylesheet" href="~/Content/css/animate.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <!-- et line icon -->
    <link rel="stylesheet" href="~/Content/css/et-line-icons.css" />
    <!-- font-awesome icon -->
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css" />
    <!-- themify icon -->
    <link rel="stylesheet" href="~/Content/css/themify-icons.css">
    <!-- swiper carousel -->
    <link rel="stylesheet" href="~/Content/css/swiper.min.css">
    <!-- justified gallery  -->
    <link rel="stylesheet" href="~/Content/css/justified-gallery.min.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css" />
    <!-- revolution slider -->
    <link rel="stylesheet" type="text/css" href="~/Content/revolution/css/settings.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/Content/revolution/css/layers.css">
    <link rel="stylesheet" type="text/css" href="~/Content/revolution/css/navigation.css">
    <!-- bootsnav -->
    <link rel="stylesheet" href="~/Content/css/bootsnav.css">
    <!-- style -->
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <!-- responsive css -->
    <link rel="stylesheet" href="~/Content/css/responsive.css" />
    <!--[if IE]>
        <script src="~/Content/js/html5shiv.js"></script>
    <![endif]-->
</head>
<body class="width-100">
    <!-- start header -->
    <header>
        <!-- start navigation -->
        <nav class="navbar full-width-pull-menu nav-dark-transparent navbar-fixed-top no-border-top white-link no-transition">
            <!-- start navigation panel -->
            <div class="container-fluid nav-header-container height-100px sm-height-100px xs-height-80px padding-three-half-lr">
                <div class="row">
                    <!-- start logo -->
                    <div class="col-md-2 col-sm-3 col-xs-8 pull-left">
                        <!--<a href="index.html" title="Pofo" class="logo"><img src="~/Content/images/logo-full-white.png" data-rjs="images/logo-full-white@2x.png" alt="Pofo"></a>-->
                        <a href="~/Home/Index" title="Pofo" class="logo"><img src="~/Content/images/logo-white.png" data-rjs="images/logo-white.png" alt="Art"></a>
                    </div>
                    <!-- end logo -->
                    <!-- start main menu -->
                    <div class="col-md-10 col-sm-9 col-xs-4">
                        <div class="menu-wrap full-screen no-padding">
                            <div class="col-sm-6 no-padding hidden-xs">
                                <div class="cover-background full-screen" style="background-image:url('images/menu-background-1.png')">
                                    <div class="opacity-medium bg-extra-dark-gray"></div>
                                    <div class="position-absolute height-100 width-100 text-center">
                                        <div class="display-table height-100 width-100">
                                            <div class="display-table-cell height-100 width-100 vertical-align-middle position-relative">
                                                <a href="~/Home/Index"><img alt="" src="~/Content/images/logo-white.png" data-rjs="images/logo-white.png"></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 no-padding bg-white full-screen">
                                <div class="position-absolute height-100 width-100 overflow-auto">
                                    <div class="display-table height-100 width-100">
                                        <div class="display-table-cell height-100 width-100 vertical-align-middle padding-fourteen-lr alt-font link-style-2 sm-padding-seven-lr xs-padding-15px-lr">
                                            <!-- start menu -->
                                            <ul class="font-weight-600 xs-no-padding-left">
                                                <!-- start menu item -->
                                                <li class="dropdown">
                                                    <a href="~/Home/Index">Home</a><span></span>
                                                </li>
                                                <!-- end menu item -->
                                                <!-- start menu item -->
                                                <li class="dropdown">
                                                    <a href="~/Home/Team">About & Team</a><span></span>
                                                </li>
                                                <!-- end menu item -->
                                                <!-- start menu item -->
                                                @{ var u = @Context.Session[@Context.Session.SessionID.ToString()] as User; }
                                                @if (u == null)
                                                {
                                                    <li class="dropdown">
                                                        <a href="~/LoginRegister/LoginRegister">Login/Register</a><span></span>
                                                    </li>
                                                }
                                                <!-- end menu item -->
                                                <!-- start menu item -->
                                                @if (u != null)
                                                {
                                                    <li class="dropdown">
                                                        <a href="~/Dashboard/Dashboard">Dashboard</a><span></span>
                                                    </li>
                                                }
                                                <!-- end menu item -->
                                                <!-- start menu item -->
                                                <li class="dropdown">
                                                    <a href="~/Search/Search">Search</a><span></span>
                                                </li>
                                                <!-- end menu item -->
                                                <!-- start menu item -->
                                                <li class="dropdown">
                                                    <a href="~/DisplayArtwork/RandomArtwork">Random Artwork</a><span></span>
                                                </li>
                                                <!-- end menu item -->
                                                <!-- start menu item -->
                                                @if (u != null)
                                                {
                                                    <li class="dropdown">
                                                        <a href="~/Submit/Submit">Submit Artwork</a><span></span>
                                                    </li>
                                                }
                                                <!-- end menu item -->
                                                @if (u != null)
                                                {
                                                    <li class="dropdown">
                                                        <a href="~/LoginRegister/logout">Logout</a><span></span>
                                                    </li>
                                                }
                                                <!-- end menu item -->
                                            </ul>
                                            <!-- end menu -->
                                        </div>
                                    </div>
                                </div>
                                <button class="close-button-menu" id="close-button"></button>
                            </div>
                        </div>
                        <!-- end main menu -->
                        <button class="navbar-toggle mobile-toggle" type="button" id="open-button" data-toggle="collapse" data-target=".navbar-collapse">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                    <!-- end main menu -->
                </div>
            </div>
            <!-- end navigation panel -->
        </nav>
        <!-- end navigation -->
    </header>
    <!-- end header -->

    <div>
        @RenderBody()
    </div>

    <!-- javascript libraries -->
    <script type="text/javascript" src="~/Content/js/jquery.js"></script>
    <script type="text/javascript" src="~/Content/js/modernizr.js"></script>
    <script type="text/javascript" src="~/Content/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="~/Content/js/skrollr.min.js"></script>
    <script type="text/javascript" src="~/Content/js/smooth-scroll.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.appear.js"></script>
    <!-- menu navigation -->
    <script type="text/javascript" src="~/Content/js/bootsnav.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.nav.js"></script>
    <!-- animation -->
    <script type="text/javascript" src="~/Content/js/wow.min.js"></script>
    <!-- page scroll -->
    <script type="text/javascript" src="~/Content/js/page-scroll.js"></script>
    <!-- swiper carousel -->
    <script type="text/javascript" src="~/Content/js/swiper.min.js"></script>
    <!-- counter -->
    <script type="text/javascript" src="~/Content/js/jquery.count-to.js"></script>
    <!-- parallax -->
    <script type="text/javascript" src="~/Content/js/jquery.stellar.js"></script>
    <!-- magnific popup -->
    <script type="text/javascript" src="~/Content/js/jquery.magnific-popup.min.js"></script>
    <!-- portfolio with shorting tab -->
    <script type="text/javascript" src="~/Content/js/isotope.pkgd.min.js"></script>
    <!-- images loaded -->
    <script type="text/javascript" src="~/Content/js/imagesloaded.pkgd.min.js"></script>
    <!-- pull menu -->
    <script type="text/javascript" src="~/Content/js/classie.js"></script>
    <script type="text/javascript" src="~/Content/js/hamburger-menu.js"></script>
    <!-- counter  -->
    <script type="text/javascript" src="~/Content/js/counter.js"></script>
    <!-- fit video  -->
    <script type="text/javascript" src="~/Content/js/jquery.fitvids.js"></script>
    <!-- equalize -->
    <script type="text/javascript" src="~/Content/js/equalize.min.js"></script>
    <!-- skill bars  -->
    <script type="text/javascript" src="~/Content/js/skill.bars.jquery.js"></script>
    <!-- justified gallery  -->
    <script type="text/javascript" src="~/Content/js/justified-gallery.min.js"></script>
    <!--pie chart-->
    <script type="text/javascript" src="~/Content/js/jquery.easypiechart.min.js"></script>
    <!-- instagram -->
    <script type="text/javascript" src="~/Content/js/instafeed.min.js"></script>
    <!-- retina -->
    <script type="text/javascript" src="~/Content/js/retina.min.js"></script>
    <!-- revolution -->
    <script type="text/javascript" src="~/Content/revolution/js/jquery.themepunch.tools.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/jquery.themepunch.revolution.min.js"></script>
    <!-- revolution slider extensions (load below extensions JS files only on local file systems to make the slider work! The following part can be removed on server for on demand loading) -->
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.actions.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.carousel.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.kenburn.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.migration.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.parallax.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script type="text/javascript" src="~/Content/revolution/js/extensions/revolution.extension.video.min.js"></script>
    <!-- setting -->
    <script type="text/javascript" src="~/Content/js/main.js"></script>
</body>
</html>