@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/toastR/toastr.min.css" />
<script src="~/Content/toastR/jQuery.min.js"></script>
<script src="~/Content/toastR/toastr.min.js"></script>

<script>
    function nameVerification() {
        var x = document.forms["searchnamebar"]["name"].value;
        if (x == "") {
            alert("Name field cannot be empty!");
            return false;
        }
        return true;
    }
    function originVerification() {
        var x = document.forms["searchoriginbar"]["origin"].value;
        if (x == "") {
            alert("Origin field cannot be empty!");
            return false;
        }
        return true;
    }
</script>

<!-- start countdown section -->
<section class="no-padding bg-extra-light-gray">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-xs-12 full-screen no-padding cover-background sm-display-none" style="background-image:url('../Content/images/paintings/lake.jpg');"></div>
            <div class="col-md-6 col-xs-12 full-screen bg-black no-padding">
                <div class="position-relative full-screen">
                    <div class="slider-typography text-center xs-overflow-auto">
                        <div class="slider-text-middle-main">
                            <div class="slider-text-middle padding-three-all xs-padding-15px-all">
                                <h6 class="font-weight-300 text-white margin-40px-bottom xs-margin-25px-bottom">SEARCH</h6>
                                <div data-enddate="2018/12/14 12:00:00" class="countdown text-center counter-box-3 margin-nine-bottom"></div>
                                <div class="bg-extra-dark-gray padding-eight-all border-radius-6 width-70 md-width-80 xs-width-100 center-col xs-padding-30px-all">
                                    <h6 class="font-weight-300 text-white margin-20px-bottom xs-margin-15px-bottom">"The noblest pleasure is the joy of understanding"</h6>
                                    <p class="text-medium width-70 center-col margin-40px-bottom xs-width-100 xs-margin-15px-bottom">Leonardo da Vinci</p>

                                    <!--Start name search bar-->
                                    <form name="searchnamebar" onsubmit="return nameVerification()" action="/Search/ExecuteNameSearch" method="post" class="search-box2">
                                        <div id="success-subscribe-newsletter" class="no-margin-lr"></div>
                                        <div class="input-group add-on width-75 center-col sm-width-100">
                                            <input name="name" id="name" class="form-control" placeholder="Search for artwork by name" type="text">
                                            <div class="input-group-btn">
                                                <button id="button-subscribe-newsletter" type="submit" class="btn btn-default"><i class="ti-angle-right text-small no-margin" aria-hidden="true"></i></button>
                                            </div>
                                        </div>
                                    </form>
                                    <!--End name search bar-->
                                    <br />
                                    <!--Start origin search bar-->
                                    <form name="searchoriginbar" onsubmit="return originVerification()" action="/Search/ExecuteOriginSearch" method="post" class="search-box2">
                                        <div id="success-subscribe-newsletter" class="no-margin-lr"></div>
                                        <div class="input-group add-on width-75 center-col sm-width-100">
                                            <input name="origin" id="origin" class="form-control" placeholder="Search for artwork by origin" type="text">
                                            <div class="input-group-btn">
                                                <button id="button-subscribe-newsletter" type="submit" class="btn btn-default"><i class="ti-angle-right text-small no-margin" aria-hidden="true"></i></button>
                                            </div>
                                        </div>
                                    </form>
                                    <!--End origin search bar-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end countdown section -->

<script>
    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": true,
        "positionClass": "toast-top-center",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }
    $(document).ready(function notif() {
        if("@ViewBag.Message.ToString()" != "")
            toastr.error("@ViewBag.Message.ToString()");
    });
</script>